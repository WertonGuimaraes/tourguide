<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.udacity.wertonguimaraes.tourguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RestaurantActivity"
            android:label="@string/restaurants"
            android:theme="@style/AppTheme.NoActionBarAndNoAnimTheme">
        </activity>
        <activity
            android:name=".activity.TouristicPointActivity"
            android:label="@string/touristic_points"
            android:theme="@style/AppTheme.NoActionBarAndNoAnimTheme">
        </activity>
        <activity
            android:name=".activity.BarPointActivity"
            android:label="@string/bars"
            android:theme="@style/AppTheme.NoActionBarAndNoAnimTheme">
        </activity>
        <activity
            android:name=".activity.HotelPointActivity"
            android:label="@string/hotels"
            android:theme="@style/AppTheme.NoActionBarAndNoAnimTheme">
        </activity>
        <activity
            android:name=".activity.ShopPointActivity"
            android:label="@string/shops"
            android:theme="@style/AppTheme.NoActionBarAndNoAnimTheme">
        </activity>

    </application>

</manifest>